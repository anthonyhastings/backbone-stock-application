{
  "name": "backbone-stock-application",
  "description": "An example stock application using Backbone.js",
  "version": "1.0.0",
  "author": "Anthony Hastings <ar.hastings@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "npm run-script build && npm run-script server",
    "build": "npm run-script scripts && npm run-script styles && npm run-script imagemin",
    "server": "babel-node server/index.js --presets es2015",
    "imagemin": "imagemin src/images/* --out-dir=dist/images",
    "scripts": "webpack",
    "styles": "npm run-script node-sass && npm run-script autoprefixer",
    "node-sass": "node-sass --output=dist/ --output-style=compressed src/",
    "autoprefixer": "postcss --use autoprefixer --config .autoprefixer.json --replace dist/styles/*",
    "pretest": "npm run-script lint",
    "lint": "eslint src/scripts server/",
    "watch-scripts": "webpack --watch",
    "watch-styles": "nodemon --verbose --ext scss --watch src/styles --exec \"npm run-script styles\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "autoprefixer": "6.4.0",
    "babel-cli": "6.11.4",
    "babel-core": "6.13.2",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.13.2",
    "body-parser": "1.15.2",
    "eslint": "3.3.0",
    "express": "4.14.0",
    "handlebars": "4.0.5",
    "handlebars-loader": "1.3.0",
    "imagemin-cli": "3.0.0",
    "node-sass": "3.8.0",
    "nodemon": "1.4.1",
    "postcss-cli": "2.5.2",
    "webpack": "1.13.1"
  },
  "dependencies": {
    "backbone": "1.3.3",
    "jquery": "3.1.0",
    "moment": "2.14.1",
    "underscore": "1.8.3"
  }
}
